# My gitconfig.

[user]
	name	=	cyphar
	email	=	cyphar@cyphar.com

[credential]

	helper	=	cache

[color]
	ui	=	true
	diff	=	auto
	status	=	auto
	branch	=	auto

[alias]
	up	=	"pull --rebase"
	sup	=	"submodule foreach git pull origin master"
	wu	=	"log --stat origin..@{0}"
	wup	=	"log -p origin..@{0}"
	st	=	"status"
	id	=	"rev-parse --verify HEAD"
