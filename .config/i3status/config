# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	interval = 5
}

order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "tztime local"

wireless _first_ {
	format_up = "W: (%quality at %essid) %ip"
	format_down = "W: down"
}

ethernet _first_ {
	# If you use %speed, i3status requires root privileges.
		# TODO: Can I just remove %speed, do I actually use it?
	format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

battery all {
	format = "%status %percentage %remaining"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}

load {
	format = "%1min"
}

# Include separate disk usage for / and /home, because most distributions have
# separate parititons for both. In future it would be nice if i3status let you
# display qgroup limits but that's actually a btrfs bug and not caused by
# i3status.

disk "/" {
	format = "root: %avail"
}

disk "/home" {
	format = "home: %avail"
}
