# ls colours
alias ls='ls --color=auto'

# ls shortcuts
alias sl='ls'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# grep colours
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# do. not. use. nano.
alias nano="echo Seriously? Why don\'t you just use Notepad.exe, MS Paint or Edlin?"

# super user do = please do?
alias please='sudo'
alias pls='sudo'

# clear history
alias clrh="history -c && echo > $HISTFILE"

# make tmux nice
#alias tmux="tmux -2"
alias tmux="TERM=xterm-256color tmux"

# make valgrind ... work
alias valgrind="valgrind --leak-check=full --show-leak-kinds=all --trace-children=yes --read-var-info=yes"
alias vg="valgrind"

# nice relative jumps
alias ..='cd ..'
alias ..2='cd ../..'
alias ..3='cd ../../..'
alias ..4='cd ../../../..'
alias ..5='cd ../../../../..'
