# Set the banner
if [ -n "$(figlet -v)" ]; then
	# If figlet is installed, generate the banner, otherwise use the one in the git repos
	figlet "<< $(uname -s) >>"
else
	cat <<EOF
  ____  _     _                   ____
 / / / | |   (_)_ __  _   ___  __ \ \ \
/ / /  | |   | | '_ \| | | \ \/ /  \ \ \
\ \ \  | |___| | | | | |_| |>  <   / / /
 \_\_\ |_____|_|_| |_|\__,_/_/\_\ /_/_/

EOF
fi

# Print out the kernel data and date.
echo "$(uname -o) ($(uname -sr)) $(date)"
