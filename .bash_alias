# ls colours
alias ls='ls --color=auto'

# ls shortcuts
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# grep colours
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# do. not. use. nano.
alias nano="echo Seriously? Why don\'t you just use Notepad.exe, MS Paint or Edlin?"

# super user do = please do?
alias please='sudo'
alias pls='sudo'

# clear history
alias clrh="history -c && echo > $HISTFILE"
