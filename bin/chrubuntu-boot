DEV="/dev/mmcblk0"

CHROME=0
LINUX=0

while getopts "b:clh" arg; do
	case ${arg} in
		h)
			echo "usage: $0 [-c|-l] [-b boot-device]" >&2
			exit
			;;
		b)
			DEV="${OPTARG}"
			;;
		c)
			CHROME=1
			;;
		l)
			LINUX=1
			;;

	esac
done

if [ "${CHROME}" -eq "${LINUX}" ]; then
	echo "-c and -l are mutually exclusive and mandatory" >&2
	exit 1
fi

shift $((OPTIND - 1))

PARTITION=6
PRIORITY=""
SUCCESSFUL=1

if [ "${LINUX}" -eq "1" ]; then
	PRIORITY=5
fi

if [ "${CHROME}" -eq "1" ]; then
	PRIORITY=0
fi

if [ -z "${PRIORITY}" ]; then
	echo "no priority given to cgpt" >&2
	exit 1
fi

cgpt add -i "${PARTITION}" -P "${PRIORITY}" -S "${SUCCESSFUL}" "${DEV}"
